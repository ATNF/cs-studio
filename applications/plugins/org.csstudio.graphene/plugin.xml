<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.csstudio.channel.application.category"
            class="org.csstudio.graphene.HistogramView"
            icon="platform:/plugin/org.csstudio.graphene/icons/histogram-16.png"
            id="org.csstudio.graphene.HistogramView"
            name="Histogram (alpha)"
            restorable="true">
      </view>
      <view
            category="org.csstudio.channel.application.category"
            class="org.csstudio.graphene.Line2DPlotView"
            icon="platform:/plugin/org.csstudio.channel.widgets/icons/multi-channel-16.png"
            id="org.csstudio.graphene.Line2DPlotView"
            name="Line2D Plot (alpha)"
            restorable="true">
      </view>
      <view
            class="org.csstudio.graphene.Scatter2DPlotView"
            icon="icons/scatter-plot.png"
            id="org.csstudio.graphene.Scatter2DPlotView"
            name="Scatter Plot (alpha)"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:display">
         <command
               commandId="org.eclipse.ui.views.showView"
               icon="platform:/plugin/org.csstudio.graphene/icons/histogram-16.png"
               label="Histogram (alpha)"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="org.csstudio.graphene.HistogramView">
            </parameter>
         </command>
         <command
               commandId="org.eclipse.ui.views.showView"
               icon="platform:/plugin/org.csstudio.channel.widgets/icons/multi-channel-16.png"
               label="Line2D Plot (alpha)"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="org.csstudio.graphene.Line2DPlotView">
            </parameter>
         </command>
         <command
               commandId="org.eclipse.ui.views.showView"
               icon="icons/scatter-plot.png"
               label="Scatter Plot"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="org.csstudio.graphene.Scatter2DPlotView">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=org.csstudio.ui.menu.popup.processvariable">
         <command
               commandId="org.csstudio.graphene.configure"
               icon="platform:/plugin/org.csstudio.channel.widgets/icons/gear-16.png"
               label="Configure..."
               style="push">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="org.csstudio.ui.util.ConfigurableWidget">
                     </adapt>
                  </iterate>
                  <and>
                     <count
                           value="*">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=org.csstudio.channel.views.configure">
         <menu
               label="Y PV">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="org.csstudio.ui.util.YAxisProcessVariable">
                     </adapt>
                  </iterate>
                  <and>
                     <count
                           value="*">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=org.csstudio.channel.views.configure">
         <menu
               label="X PV">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="org.csstudio.ui.util.XAxisProcessVariable">
                     </adapt>
                  </iterate>
                  <and>
                     <count
                           value="*">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </menu>
      </menuContribution>
    </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.csstudio.ui.util.ConfigureHandler"
            id="org.csstudio.graphene.configure"
            name="Configure...">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.csstudio.ui.util.ProcessVariableAdaptable"
            class="org.csstudio.ui.util.CommonAdapterFactory">
         <adapter
               type="org.csstudio.csdata.ProcessVariable">
         </adapter>
         <adapter
               type="[Lorg.csstudio.csdata.ProcessVariable;">
         </adapter>
      </factory>
      <factory
            adaptableType="org.csstudio.ui.util.ConfigurableWidgetAdaptable"
            class="org.csstudio.ui.util.CommonAdapterFactory">
         <adapter
               type="org.csstudio.ui.util.ConfigurableWidget">
         </adapter>
      </factory>
      <factory
            adaptableType="org.csstudio.ui.util.YAxisProcessVariableAdaptable"
            class="org.csstudio.ui.util.CommonAdapterFactory">
         <adapter
               type="org.csstudio.ui.util.YAxisProcessVariable">
         </adapter>
      </factory>
      <factory
            adaptableType="org.csstudio.ui.util.XAxisProcessVariableAdaptable"
            class="org.csstudio.ui.util.CommonAdapterFactory">
         <adapter
               type="org.csstudio.ui.util.XAxisProcessVariable">
         </adapter>
      </factory>
   </extension>

</plugin>
