<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="pvutildata" name="PVUtilData" schema="schema/pvutildata.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.csstudio"
            name="CSS">
      </category>
      <view
            id="org.csstudio.diag.pvutil.view.PVUtilView"
            category="org.csstudio"
            class="org.csstudio.diag.pvutil.view.PVUtilView"
            icon="icons/pvu.jpg"
            name="PV Utility">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:diag">
         <command
               commandId="org.eclipse.ui.views.showView"
               icon="icons/pvu.jpg"
               label="PV Utility"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="org.csstudio.diag.pvutil.view.PVUtilView">
            </parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.csstudio.pvutil.OpenViewWithPVPopupAction"
            objectClass="org.csstudio.platform.model.IProcessVariable">
         <menu
               id="org.csstudio.pvutil.popmenu"
               label="CSS"
               path="additions">
         </menu>
         <action
               class="org.csstudio.diag.pvutil.view.PVpopupAction"
               enablesFor="1"
               icon="icons/pvu.jpg"
               id="org.csstudio.pvutil.view.PVpopupAction"
               label="PV Utility"
               menubarPath="org.csstudio.popmenu/content"
               tooltip="%PopupMenuTooltip">
         </action>
      </objectContribution>
   </extension>

</plugin>
