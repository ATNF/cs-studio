<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.cssstudio.utility.documentViewer.popupMenu"
            objectClass="org.csstudio.platform.model.IProcessVariable">
         <menu
               id="org.csstudio.popmenu"
               label="CSS"
               path="additions">
            <groupMarker
                  name="content">
            </groupMarker>
            <separator
                  name="additions">
            </separator>
         </menu>
         <action
               class="org.csstudio.utility.documentviewer.PVpopupAction"
               icon="icons/bookmarks_view.gif"
               id="org.cssstudio.utility.documentViewer.PVpopupAction"
               label="DocumentViewer"
               menubarPath="org.csstudio.popmenu/content">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.csstudio"
            name="CSS">
      </category>
      <view
            allowMultiple="false"
            category="org.csstudio"
            class="org.csstudio.utility.documentviewer.DocumentViewer"
            icon="icons/bookmarks_view.gif"
            id="org.cssstudio.utility.documentViewer.DocumentViewer"
            name="Document Viewer"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="Global CSS menu actions"
            id="org.cssstudio.utility.documentViewer.actionSet"
            label="Document Viewer"
            visible="true">
         <action
               class="org.csstudio.utility.documentviewer.ShowViewerAction"
               icon="icons/bookmarks_view.gif"
               id="org.cssstudio.utility.documentViewer.action"
               label="Document Viewer"
               menubarPath="css/utility/"
               style="push">
         </action>
      </actionSet>
   </extension>

</plugin>
