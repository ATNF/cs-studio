<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="org.csstudio.model.test">
      </category>
      <view
            name="Drag&apos;n&apos;Drop Test View"
            icon="icons/sample.gif"
            category="org.csstudio.model.test"
            class="org.csstudio.model.test.DnDTestView"
            id="org.csstudio.model.test.DnDTestView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="test"
               label="Test">
            <command
                  commandId="org.csstudio.model.test.TestAdapterUtil"
                  label="Test adapter"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.csstudio.model.test.TestAdapterUtil"
            id="org.csstudio.model.test.TestAdapterUtil"
            name="Test adapter">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.csstudio.model.test.DeviceAndAPV"
            class="org.csstudio.model.test.DeviceAndAPVFactory">
         <adapter
               type="org.csstudio.model.ProcessVariableName">
         </adapter>
         <adapter
               type="org.csstudio.model.DeviceName">
         </adapter>
         <adapter
               type="org.csstudio.model.test.DeviceAndPVs">
         </adapter>
      </factory>
   </extension>

</plugin>
