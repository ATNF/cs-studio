<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.csstudio"
            class="org.csstudio.utility.epicsDataBaseCompare.ui.EpicsDataBaseCompareView"
            icon="icons/compare_view.gif"
            id="org.csstudio.utility.epicsDataBaseCompare.ui.EpicsDataBaseCompareView"
            name="EPICS DB Compare">
      </view>
      <category
            id="org.csstudio"
            name="CSS">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.csstudio.utility.epicsDataBaseCompare.actionSet"
            label="CSS Action Set"
            visible="true">
         <action
               class="Find"
               definitionId="org.csstudio.utility.epicsDataBaseCompare.FindId"
               id="org.csstudio.utility.epicsDataBaseCompare.actionFind"
               label="Find"
               style="push">
         </action>
         <action
               class="org.csstudio.utility.epicsDataBaseCompare.ShowEpicsDbCompare"
               icon="icons/compare_view.gif"
               id="org.csstudio.utility.epicsDataBaseCompare.ShowEpicsDbCompare"
               label="EPICS DB compare"
               menubarPath="css/utility/"
               style="push">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.csstudio.utility.epicsDataBaseCompare.FindId"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+F">
      </key>
      <key
            commandId="org.csstudio.utility.epicsDataBaseCompare.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.csstudio.utility.epicsDataBaseCompare.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="org.csstudio.utility.epicsDataBaseCompare.commands.category"
            id="org.csstudio.utility.epicsDataBaseCompare.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.csstudio.utility.epicsDataBaseCompare.handlers.FindHandler"
            commandId="org.csstudio.utility.epicsDataBaseCompare.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.csstudio.utility.epicsDataBaseCompare.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="org.csstudio.utility.epicsDataBaseCompare.commands.sampleCommand"
                  id="org.csstudio.utility.epicsDataBaseCompare.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.csstudio.utility.epicsDataBaseCompare.toolbars.sampleToolbar">
            <command
                  commandId="org.csstudio.utility.epicsDataBaseCompare.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="org.csstudio.utility.epicsDataBaseCompare.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
