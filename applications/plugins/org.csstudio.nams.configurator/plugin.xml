<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="AMS"
            id="org.csstudio.nams.configurator">
      </category>
      <view
            name="AMS Configuration Tree"
            icon="icons/ams.gif"
            category="org.csstudio.nams.configurator"
            class="org.csstudio.nams.configurator.treeviewer.ConfigurationTreeView"
            id="org.csstudio.nams.configurator.views.ConfigurationTreeView">
      </view>
      <view
            allowMultiple="false"
            class="org.csstudio.nams.configurator.branch.views.AlarmbearbeiterView"
            fastViewWidthRatio=".5f"
            id="org.csstudio.nams.configurator.alarmbearbeiter"
            name="Alarmbearbeiter">
      </view>
      <view
            allowMultiple="false"
            class="org.csstudio.nams.configurator.branch.views.AlarmbearbeitergruppenView"
            fastViewWidthRatio=".5f"
            id="org.csstudio.nams.configurator.alarmbearbeitergruppen"
            name="Alarmbearbeitergruppen">
      </view>
      <view
            allowMultiple="false"
            class="org.csstudio.nams.configurator.branch.views.AlarmtopicView"
            fastViewWidthRatio=".5f"
            id="org.csstudio.nams.configurator.alarmtopic"
            name="Alarmtopic">
      </view>
      <view
            allowMultiple="false"
            class="org.csstudio.nams.configurator.branch.views.FilterView"
            fastViewWidthRatio=".5f"
            id="org.csstudio.nams.configurator.filter"
            name="Filter">
      </view>
      <view
            allowMultiple="false"
            class="org.csstudio.nams.configurator.branch.views.FilterbedingungView"
            fastViewWidthRatio="0.5f"
            id="org.csstudio.nams.configurator.filterbedingung"
            name="Filterbedingung">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.csstudio.nams.configurator.PerspectiveFactory"
            icon="icons/ams.gif"
            id="org.csstudio.nams.configurator.perspective"
            name="AMS Configurator">
      </perspective>
      <perspective
            class="org.csstudio.nams.configurator.branch.perspective.AMSConfiguratorPerspective"
            id="org.csstudio.nams.configurator.amsconfiguratorbranch"
            name="AMS configurator (branch)">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.csstudio.nams.configurator.editor.ConfigurationEditor"
            icon="icons/ams.gif"
            id="org.csstudio.nams.configurator.ConfigurationEditor"
            name="Configuration Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.csstudio.nams.configurator.configurationNodeContribution"
            objectClass="org.csstudio.nams.configurator.treeviewer.model.treecomponents.IConfigurationRoot">
         <action
               class="org.csstudio.nams.configurator.treeviewer.actions.NewEntryAction"
               icon="icons/abiword_abi.png"
               id="org.csstudio.nams.configurator.newEntryaction"
               label="New Entry"
               menubarPath="additions">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.csstudio.nams.configurator.configurationGroupContribution"
            objectClass="org.csstudio.nams.configurator.treeviewer.model.treecomponents.SortgroupNode">
         <action
               class="org.csstudio.nams.configurator.treeviewer.actions.NewEntryAction"
               icon="icons/abiword_abi.png"
               id="org.csstudio.nams.configurator.newGroupAction"
               label="New Group Entry">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.csstudio.nams.configurator.amsconfiguratorbranch">
         <view
               closeable="false"
               id="org.csstudio.nams.configurator.alarmbearbeiter"
               minimized="false"
               moveable="true"
               ratio="0.4f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.csstudio.nams.configurator.alarmbearbeitergruppen"
               minimized="false"
               moveable="true"
               ratio="0.4f"
               relationship="top"
               relative="org.csstudio.nams.configurator.alarmbearbeiter"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.csstudio.nams.configurator.filterbedingung"
               minimized="false"
               moveable="true"
               ratio="0.4f"
               relationship="stack"
               relative="org.csstudio.nams.configurator.alarmbearbeiter"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.csstudio.nams.configurator.alarmtopic"
               minimized="false"
               moveable="true"
               ratio="0.4f"
               relationship="stack"
               relative="org.csstudio.nams.configurator.filterbedingung"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.csstudio.nams.configurator.filter"
               minimized="false"
               moveable="true"
               ratio="0.4f"
               relationship="stack"
               relative="org.csstudio.nams.configurator.alarmbearbeitergruppen"
               showTitle="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
