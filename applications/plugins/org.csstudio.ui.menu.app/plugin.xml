<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
         <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?before=additions">
         <menu
               id="file"
               label="File"
               mnemonic="F">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="New"
                  style="push">
            </command>
            <menu
                  label="Recent Files...">
                <dynamic
                      class="org.csstudio.ui.menu.app.handlers.MenuReopenEditors"
                      id="org.csstudio.ui.menu.app.reopen_editors">
                </dynamic>
            </menu>
            <separator
                  name="new.ext">
            </separator>
            <separator
                  name="close"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.close"
                  label="Close"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.closeAll"
                  label="Close All"
                  style="push">
            </command>
            <separator
                  name="save"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="Save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  label="Save All"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAs"
                  label="Save As"
                  style="push">
            </command>
            <separator
                  name="workspace"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.import"
                  label="Import"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.export"
                  label="Export"
                  style="push">
            </command>
            <separator
                  name="additions">
            </separator>
            <separator
                  name="exit"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?before=additions">
         <menu
               id="edit"
               label="Edit">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  label="Undo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  label="Redo"
                  style="push">
            </command>
            <separator
                  name="copy"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.cut"
                  label="Cut"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  label="Copy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  label="Paste"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  label="Delete"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.selectAll"
                  label="Select All"
                  style="push">
            </command>
            <separator
                  name="find.ext"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.findReplace"
                  label="Find/Replace..."
                  style="push">
            </command>
            <separator
                  name="additions">
            </separator>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?endof=additions">
         <menu
               id="window"
               label="Window">
            <command
                  commandId="org.eclipse.ui.window.newWindow"
                  label="New Window"
                  style="push">
            </command>
            <separator
                  name="views"
                  visible="true">
            </separator>
            <menu
                  label="Open Perspective">
               <dynamic
                     class="org.csstudio.ui.menu.app.handlers.OpenPerspectiveMenu"
                     id="org.csstudio.ui.menu.app.open_perspective">
               </dynamic>
            </menu>
            <menu
                  label="Show View">
               <dynamic
                     class="org.csstudio.ui.menu.app.handlers.ShowViewMenu"
                     id="org.csstudio.ui.menu.app.show_view">
               </dynamic>
            </menu>
            <separator
                  name="additions"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences..."
                  style="push">
            </command>
         </menu>
      </menuContribution>

      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?endof=additions">
         <menu
               id="help"
               label="Help">
            <command
                  commandId="org.eclipse.ui.help.quickStartAction"
                  icon="icons/css16.gif"
                  label="Welcome"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  icon="icons/css16.gif"
                  label="About"
                  style="push">
            </command>
            <separator
                  name="helpStart"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.help.helpContents"
                  icon="icons/help.gif"
                  label="Help Contents"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="Cheat Sheets..."
                  style="push">
                <parameter
                    name="org.eclipse.ui.views.showView.viewId"
                    value="org.eclipse.ui.cheatsheets.views.CheatSheetView">
                </parameter>
            </command>
            <separator
                  name="helpEnd"
                  visible="true">
            </separator>
            <separator
                  name="additions"
                  visible="true">
            </separator>
            <separator
                  name="end"
                  visible="true">
            </separator>
         </menu>
      </menuContribution>
   </extension>
</plugin>
