<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="widget" name="Widget" schema="schema/widget.exsd"/>
   <extension-point id="graphicalFeedbackFactory" name="graphicalFeedbackFactory" schema="schema/graphicalFeedbackFactory.exsd"/>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.csstudio.opibuilder.editor.OPIEditor"
            contributorClass="org.csstudio.opibuilder.editor.OPIEditorActionBarContributor"
            default="false"
            extensions="opi"
            icon="icons/OPIBuilder.png"
            id="org.csstudio.opibuilder.OPIEditor"
            name="OPI Editor">
      </editor>
      <editor
            class="org.csstudio.opibuilder.runmode.OPIRunner"
            contributorClass="org.csstudio.opibuilder.runmode.OPIRunnerToolBarContributor"
            default="false"
            extensions="opi"
            icon="icons/OPIBuilder.png"
            id="org.csstudio.opibuilder.OPIRunner"
            name="OPI Runner">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.csstudio.opibuilder.editor.OPIEditorPerspective"
            icon="icons/OPIBuilder.png"
            id="org.csstudio.opibuilder.opieditor"
            name="%OPIEditor">
      </perspective>
      <perspective
            class="org.csstudio.opibuilder.runmode.OPIRunnerPerspective"
            icon="icons/OPIBuilder.png"
            id="org.csstudio.opibuilder.OPIRunner"
            name="%OPIRunner">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Run the OPI file currently in the editor"
            id="org.csstudio.opibuilder.runopi"
            name="Run OPI">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.csstudio.opibuilder.runopi"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+G">
      </key>
      <scheme
            description="OPIBuilder Key Binding Scheme"
            id="org.csstudio.opibuilder.keybinding.scheme"
            name="OPIBuilderKeyBindingScheme">
      </scheme>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.opibuilder.preferences.OPIBuilderPreferencePage"
            id="org.csstudio.opibuilder.preferences"
            name="OPI Builder">
      </page>
   </extension>

</plugin>
