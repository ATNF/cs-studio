    <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="Global CSS menu actions"
            id="org.csstudio.diag.probe"
            label="CSS Action Set"
            visible="true">
         <action
               class="org.csstudio.diag.probe.ShowProbeAction"
               icon="icons/probe.gif"
               id="org.csstudio.diag.probe.showprobeaction"
               label="%Probe"
               menubarPath="css/diag/"
               style="push"
               tooltip="%MenuTooltip"/>
      </actionSet>
