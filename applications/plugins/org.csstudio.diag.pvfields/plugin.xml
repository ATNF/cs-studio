<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="pvfielddata" name="PVFieldData" schema="schema/pvfielddata.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.csstudio"
            name="CSS">
      </category>
      <view
            category="org.csstudio"
            class="org.csstudio.diag.pvfields.view.PVFieldsView"
            icon="icons/fields.jpg"
            id="org.csstudio.diag.pvfields.view.PVFieldsView"
            name="PV Fields Viewer"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:diag">
         <command
               commandId="org.eclipse.ui.views.showView"
               icon="icons/fields.jpg"
               label="PV Fields Viewer"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="org.csstudio.diag.pvfields.view.PVFieldsView">
            </parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.csstudio.diag.pvfields.OpenViewWithPopupAction"
            objectClass="org.csstudio.platform.model.IProcessVariable">
         <menu
               id="org.csstudio.diag.pvfields.popupmenu"
               label="CSS"
               path="additions">
         </menu>
         <action
               class="org.csstudio.diag.pvfields.view.PVFieldpopupAction"
               enablesFor="1"
               icon="icons/fields.jpg"
               id="org.csstudio.diag.pvfields.view.PVFieldpopupAction"
               label="PV Fields Viewer"
               menubarPath="org.csstudio.popmenu/content"
               tooltip="%PopupMenuTooltip">
         </action>
      </objectContribution>
   </extension>

</plugin>
