<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="CSS"
            id="org.csstudio">
      </category>
      <view
            name="PVManager Probe"
            icon="icons/sample.gif"
            category="org.csstudio"
            class="org.csstudio.diag.pvmanager.probe.views.PVManagerProbe"
            id="org.csstudio.diag.pvmanager.probe.views.PVManagerProbe">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.csstudio.diag.pvmanager.probe.views.PVManagerProbe">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="Global CSS menu actions"
            id="org.csstudio.diag.pvmanager.probe"
            label="CSS Action Set"
            visible="true">
         <action
               class="org.csstudio.diag.pvmanager.probe.ShowProbeAction"
               id="org.csstudio.diag.pvmanager.probe.showaction"
               label="PVMgr Probe"
               menubarPath="css/diag/"
               style="push">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
   </extension>

</plugin>
