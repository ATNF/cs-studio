<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="LdapUpdaterApplication"
         name="LDAP Updater"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="1"
            thread="any"
            visible="false">
         <run 
            class="org.csstudio.utility.ldapUpdater.LdapUpdaterServer">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.csstudio.utility.ldapUpdater.LdapUpdaterApplication"
            name="ldapUpdater">
         <property
               name="appName"
               value="ldapUpdater">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.csstudio.utility.ldapUpdater.preferences.LdapUpdaterPreferences">
      </initializer>
   </extension>
   <extension
         point="org.csstudio.platform.managementCommands">
      <command
            class="org.csstudio.utility.ldapUpdater.action.ShutdownLdapUpdaterAction"
            id="org.csstudio.utility.ldapUpdater.action.ShutdownLdapUpdaterAction"
            label="Stop LDAP Updater Service">
      </command>
      <command
            class="org.csstudio.utility.ldapUpdater.action.UpdateLdapAction"
            id="org.csstudio.utility.ldapUpdater.action.UpdateLdapAction"
            label="Start LDAP Update">
      </command>
      <command
      		class="org.csstudio.utility.ldapUpdater.action.IocManagement"
      		id="org.csstudio.utility.ldapUpdater.action.IocManagement"
      		label="Modify IOC">
        <dynamicEnumerationParameter
               class="org.csstudio.utility.ldapUpdater.action.IocEnumeration"
               id="ioc"
               label="IOC">
        </dynamicEnumerationParameter>
        <dynamicEnumerationParameter
               class="org.csstudio.utility.ldapUpdater.action.CommandEnumeration"
               id="command"
               label="Command">
        </dynamicEnumerationParameter>
      </command>
      <!--command
            class="org.csstudio.utility.ldapUpdater.action.TidyUpLdapAction"
            id="org.csstudio.utility.ldapUpdater.action.TidyUpLdapAction"
            label="Tidy up LDAP">
      </command-->      
    </extension>

</plugin>
