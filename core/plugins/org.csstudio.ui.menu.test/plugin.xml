<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Test"
            id="org.csstudio.test">
      </category>
      <view
            name="Process Variable Popup Test"
            icon="icons/test.png"
            category="org.csstudio.test"
            class="org.csstudio.ui.menu.test.ProcessVariablePopupTestView"
            id="org.csstudio.ui.menu.test.ProcessVariablePopupTestView">
      </view>
      <view
            name="Adaptable to Process Variable Popup Test"
            icon="icons/test.png"
            category="org.csstudio.test"
            class="org.csstudio.ui.menu.test.AdaptableProcessVariablePopupTestView"
            id="org.csstudio.ui.menu.test.AdaptableProcessVariablePopupTestView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.csstudio.ui.menu.test.ProcessVariablePopupTestView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.csstudio.ui.menu.test.CustomProcessVariable"
            class="org.csstudio.ui.menu.test.CustomProcessAdapter">
         <adapter
               type="org.csstudio.csdata.ProcessVariable">
         </adapter>
      </factory>
   </extension>

</plugin>
