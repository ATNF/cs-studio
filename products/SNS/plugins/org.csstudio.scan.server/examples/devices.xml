<!-- "Device" Configuration

     Lists devices that the scan server can use,
     mapping device names to actual PV names.
     
     The information is likely to change when
     for example a sample environment on the beam
     line is reconfigured.
     
     In the future, this information might be obtained
     from a database like the "Channel Finder".
  -->
<devices>
    <device name="xpos" type="pv">
        <pv>motor_x</pv>
    </device>
    <device name="ypos" type="pv">
        <pv>motor_y</pv>
    </device>
    <device name="setpoint" type="pv">
        <pv>setpoint</pv>
    </device>
    <device name="readback" type="pv">
        <pv>readback</pv>
    </device>
</devices>