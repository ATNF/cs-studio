<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.csstudio"
            name="CSS"/>
      <view
            category="org.csstudio"
            class="org.csstudio.utility.nameSpaceBrowser.ui.MainView"
            icon="icons/LDAPBrowserHover.gif"
            id="org.csstudio.utility.nameSpaceBrowser.ui.MainView"
            name="Namespace Browser"/>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="Global CSS menu actions"
            id="org.eclipse.csstudio.ui.nameSpaceBrowserAction"
            label="CSS Action Set"
            visible="true">
         <action
               class="org.csstudio.utility.nameSpaceBrowser.ui.ShowNamespaceBrowser"
               disabledIcon="icons/LDAPBrowserOff.gif"
               hoverIcon="icons/LDAPBrowserHover.gif"
               icon="icons/LDAPBrowserHover.gif"
               id="org.csstudio.utility.nameSpaceBrowser.action1"
               label="Namespace Browser"
               menubarPath="css/diag/"
               style="push"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.csstudio.utility.nameSpaceBrowser.popupMenu"
            objectClass="org.csstudio.platform.model.IProcessVariable">
         <menu
               id="org.csstudio.popmenu"
               label="CSS"
               path="additions">
            <groupMarker name="content"/>
            <separator name="additions"/>
         </menu>
         <action
               class="org.csstudio.utility.nameSpaceBrowser.PVpopupAction"
               enablesFor="1"
               icon="icons/LDAPBrowserHover.gif"
               id="org.csstudio.utility.nameSpaceBrowser.PVpopupAction"
               label="Name Space Browser"
               menubarPath="org.csstudio.popmenu/content"
               tooltip="Send selected PV to the Name Space Browser"/>
      </objectContribution>
   </extension>
</plugin>
