<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.csstudio.alarm.beast.annunciator.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.csstudio.alarm.beast.annunciator.application"
            name="Annunciator">
         <property
               name="appName"
               value="Annunciator">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.csstudio"
            name="CSS">
      </category>
      <view
            category="org.csstudio"
            class="org.csstudio.alarm.beast.annunciator.ui.AnnunciatorView"
            icon="icons/annunciator.png"
            id="org.csstudio.alarm.beast.annunciator.view"
            name="%Annunciator"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="Global CSS menu actions"
            id="org.csstudio.alarm.beast.annunciator.cssmenu"
            label="CSS Action Set"
            visible="true">
         <action
               class="org.csstudio.alarm.beast.annunciator.ui.ShowAnnunciatorAction"
               icon="icons/annunciator.png"
               id="org.csstudio.alarm.beast.annunciator.show_annunciator"
               label="%Annunciator"
               menubarPath="css/alarm/"
               style="push"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.csstudio.platform.ui.css.applications.alarm"
            class="org.csstudio.alarm.beast.annunciator.ui.PreferencePage"
            id="org.csstudio.alarm.beast.annunciator.preferences"
            name="%Annunciator">
      </page>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true">
      </toc>
   </extension>

</plugin>
