<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.csstudio.opibuilder.widget">
      <widget
            category="Graphics"
            description="Create a rectangle widget"
            editpart_class="org.csstudio.opibuilder.widgets.editparts.RectangleEditpart"
            icon="icons/rectangle.gif"
            model_class="org.csstudio.opibuilder.widgets.model.RectangleModel"
            name="Rectangle"
            typeId="org.csstudio.opibuilder.widgets.Rectangle">
      </widget>
      <widget
            category="Controls"
            description="A knob widget which could be used to read/write a PV"
            editpart_class="org.csstudio.opibuilder.widgets.editparts.KnobEditPart"
            icon="icons/knob.gif"
            model_class="org.csstudio.opibuilder.widgets.model.KnobModel"
            name="Knob"
            typeId="org.csstudio.opibuilder.widgets.knob">
      </widget>
      <widget
            category="Graphics"
            description="A label for displaying static text or string from PV."
            editpart_class="org.csstudio.opibuilder.widgets.editparts.LabelEditPart"
            icon="icons/label.gif"
            model_class="org.csstudio.opibuilder.widgets.model.LabelModel"
            name="Label"
            typeId="org.csstudio.opibuilder.widgets.Label">
      </widget>
      <widget
            category="Monitors"
            description="A text indicator for displaying PV value."
            editpart_class="org.csstudio.opibuilder.widgets.editparts.TextIndicatorEditPart"
            icon="icons/TextIndicator.png"
            model_class="org.csstudio.opibuilder.widgets.model.TextIndicatorModel"
            name="Text Indicator"
            typeId="org.csstudio.opibuilder.widgets.TextIndicator">
      </widget>     
   </extension>

</plugin>
