<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="LdapUpdaterApplication"
         name="LDAP Updater"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="1"
            thread="any"
            visible="false">
         <run 
            class="org.csstudio.utility.ldapUpdater.LdapUpdaterServer">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.csstudio.utility.ldapUpdater.LdapUpdaterApplication"
            name="ldapUpdater">
         <property
               name="appName"
               value="ldapUpdater">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.csstudio.utility.ldapUpdater.preferences.LdapUpdaterPreferences">
      </initializer>
   </extension>
   <extension
         point="org.csstudio.platform.managementCommands">
      <command
            class="org.csstudio.utility.ldapUpdater.ShutdownLdapUpdaterAction"
            id="org.csstudio.utility.ldapUpdater.ShutdownLdapUpdaterAction"
            label="Stop Ldap Updater">
      </command>
      <command
            class="org.csstudio.utility.ldapUpdater.UpdateLdapAction"
            id="org.csstudio.utility.ldapUpdater.UpdateLdapAction"
            label="Start Ldap Update">
      </command>
      
    </extension>

</plugin>
