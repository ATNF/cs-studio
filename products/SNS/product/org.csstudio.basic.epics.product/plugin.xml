<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="org.csstudio.basic.epics.application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.csstudio.startup.application.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.csstudio.basic.epics.application"
            name="CSS (EPICS)">
         <property
               name="appName"
               value="CSS (EPICS)">
         </property>
         <property
               name="startupForegroundColor"
               value="0000FF">
         </property>
         <property
               name="startupMessageRect"
               value="7,180,445,20">
         </property>
         <property
               name="startupProgressRect"
               value="5,200,445,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutImage"
               value="icons/about.gif">
         </property>
         <property
               name="aboutText"
               value="Control System Studio (CSS) is a combined&#x0A;effort of several parties, including&#x0A;- DESY (Hamburg, Germany)&#x0A;- SNS (Oak Ridge, TN).&#x0A;&#x0A;It provides a collection of control system&#x0A;tools in a common environment, based&#x0A;on Eclipse.&#x0A;&#x0A;See http://ics-web.sns.ornl.gov/css">
         </property>
         <property
               name="windowImages"
               value="platform:/plugin/org.csstudio.startuphelper/resources/icons/css16x16.gif,platform:/plugin/org.csstudio.startuphelper/resources/icons/css32x32.gif,platform:/plugin/org.csstudio.startuphelper/resources/icons/css48x48.gif,platform:/plugin/org.csstudio.startuphelper/resources/icons/css64x64.gif,platform:/plugin/org.csstudio.startuphelper/resources/icons/css128x128.gif">
         </property>
         <property
            name="introTitle"
            value="Welcome to CSS for EPICS!&lt;/h1&gt;&lt;p&gt;Control System Studio, CSS, is a collection of tools to monitor and operate the control system&lt;/p&gt;&lt;h1&gt;">
         </property>
         <property
            name="introBrandingImage"
            value="product:icons/css64.gif"/>
         <property
            name="introBrandingImageText"
            value="CSS for EPICS"/>
      </product>
   </extension>
   
   <extension
         point="org.eclipse.ui.intro">
      <introProductBinding
            introId="org.eclipse.ui.intro.universal"
            productId="org.csstudio.basic.epics.product.product"/>
   </extension>
   
   <extension
         point="org.eclipse.ui.intro.configExtension">
      <configExtension
            content="intro/overview.xml"
            configId="org.eclipse.ui.intro.universalConfig">
      </configExtension>
      <configExtension
            content="intro/whatsnew.xml"
            configId="org.eclipse.ui.intro.universalConfig">
      </configExtension>
   </extension>
   
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true">
      </toc>
   </extension>
     
   <extension
         point="org.csstudio.startup.module">
      <workbench
            class="org.csstudio.startuphelper.module.DefaultWorkbench">
      </workbench>
   </extension>
</plugin>
