<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.csstudio.platform.ui.internal.perspectives.CssDefaultPerspective"
            id="org.csstudio.platform.ui.internal.perspectives.CssDefaultPerspective"
            name="%cssPerspectiveName"/>
   </extension>

   <extension
         id="logPreferences"
         name="logPreferences"
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.csstudio.platform.log.logPreferences"
            class="org.csstudio.platform.ui.internal.logging.ConsoleAppenderPreferencePage"
            id="org.csstudio.platform.log.logPreferences.console"
            name="%logConsoleAppenderPageName"/>
      <page
            class="org.csstudio.platform.ui.internal.logging.LoggingPreferencePage"
            id="org.csstudio.platform.log.logPreferences"
            name="%logPageName"/>
      <page
            category="org.csstudio.platform.log.logPreferences"
            class="org.csstudio.platform.ui.internal.logging.FileAppenderPreferencePage"
            id="org.csstudio.platform.log.logPreferences.file"
            name="%logFileAppenderPageName"/>
      <page
            category="org.csstudio.platform.log.logPreferences"
            class="org.csstudio.platform.ui.internal.logging.JmsAppenderPreferencePage"
            id="org.csstudio.platform.log.logPreferences.jms"
            name="%logJmsAppenderPageName"/>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="tocApps.xml"
            primary="true"/>
      <toc
            file="tocCore.xml"
            primary="true"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.core.resources.IResource"
            class="org.csstudio.platform.ui.internal.workbench.ResourcesAdapterFactory">
         <adapter type="org.eclipse.ui.model.IWorkbenchAdapter"/>
      </factory>
      <factory
            adaptableType="org.csstudio.platform.model.IProcessVariable"
            class="org.csstudio.platform.ui.internal.workbench.ProcessVariableAdapterFactory">
         <adapter type="org.eclipse.ui.model.IWorkbenchAdapter"/>
      </factory>
      <factory
            adaptableType="org.csstudio.platform.model.IControlSystemItem"
            class="org.csstudio.platform.ui.internal.workbench.ControlSystemItemAdapterFactory">
         <adapter type="org.eclipse.ui.model.IWorkbenchAdapter"/>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="User Management Actions"
            label="User Management Actions"
            visible="true">
         <action
               class="org.csstudio.platform.ui.internal.security.LoginAction"
               id="org.csstudio.platform.ui.internal.security.LoginAction"
               label="Login"
               menubarPath="css/other/"
               style="push"/>
      </actionSet>
      <actionSet
            id="org.eclipse.csstudio.ui.systemActions"
            label="System Actions"
            visible="true">
         <action
               class="org.csstudio.platform.ui.internal.actions.RestartAction"
               id="org.csstudio.platform.ui.internal.actions.RestartAction"
               label="%menuRestart"
               menubarPath="file/fileEnd"
               style="push"/>
      </actionSet>
      
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.csstudio.platform.ui.internal.security.AuthenticationPreferencePage"
            id="org.csstudio.platform.ui.internal.security.AuthenticationPreferencePage"
            name="%authenticationPageName"/>
      <page
            class="org.csstudio.platform.ui.internal.localization.LocalePreferencePage"
            id="org.csstudio.platform.ui.internal.localization.LocalePreferencePage"
            name="%localePageName"/>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml"
            />
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.csstudio.platform.ui.internal.developmentsupport.util.ContainerView"
            icon="icons/containerView.gif"
            id="org.csstudio.platform.ui.internal.developmentsupport.util.ContainerView"
            name="Container View"/>
   </extension>

</plugin>
